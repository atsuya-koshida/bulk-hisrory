.form-page
  .form-body
    .container
      .container__title
        会員情報入力
      .container__body
        .body__form
          = form_with model: @user, url: user_registration_path, local: true, method: :post do |f|
            = devise_error_messages!
            .title
              ニックネーム
            =f.text_field :name, class: "text-field", placeholder: '  例）フリマ太朗'
            .title
              メールアドレス
            =f.email_field :email, class: "text-field", placeholder: '  PC・携帯どちらでも可'
            .title
              パスワード
            =f.password_field :password, autocomplete: "off", class: "text-field", placeholder: '6文字以上の半角英数字'
            .title
              パスワード確認
            =f.password_field :password_confirmation, autocomplete: "off", class: "text-field", placeholder:"パスワード確認"
            =f.submit '新規登録', class: "submit-btn"